<?xml version="1.0" encoding="UTF-8"?>
<!-- User Mapper -->
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.coverletter.main.mybatis.mapper.UserMapper">
	<select id="findAll" resultType="UserDTO">
		select * from user
	</select>
	<select id="findByEmail" parameterType="String" resultType="UserDTO">
		select * from user where uemail = #{uemail}
	</select>
	<insert id="insertUser" parameterType="UserDTO">
	<![CDATA[
		insert into user(uemail, uname, upassword, tid)
		Values (#{uemail}, #{uname}, #{upassword}, #{tid})
	]]>
	</insert>
</mapper>